/* pages/member/add.wxss */
.container {
  padding: 30rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 表单部分 */
.form-section {
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-1);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.label.required::before {
  content: '*';
  color: var(--error-color);
  margin-right: 4rpx;
}

.input {
  width: 100%;
  height: 88rpx;
  background-color: var(--background-color);
  border-radius: var(--border-radius-md);
  padding: 0 20rpx;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.picker {
  width: 100%;
  height: 88rpx;
  background-color: var(--background-color);
  border-radius: var(--border-radius-md);
  padding: 0 20rpx;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  line-height: 88rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  background-color: var(--background-color);
  border-radius: var(--border-radius-md);
  padding: 20rpx;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

/* 提示部分 */
.tips-section {
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-1);
}

.tips-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.tips-content {
  border-top: 1rpx solid var(--border-color);
  padding-top: 20rpx;
}

.tips-item {
  margin-bottom: 20rpx;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.level-name {
  display: block;
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.level-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.5;
}

/* 操作按钮 */
.action-section {
  margin-top: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: var(--primary-color);
  color: #fff;
  border-radius: 44rpx;
  font-size: var(--font-size-lg);
} 