/* 导入主题样式 */
@import "../../styles/theme.wxss";

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.store-name {
  margin-bottom: 8rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background-color: var(--border-color);
  border-radius: 50%;
}

/* 数据概览卡片 */
.dashboard-cards {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.dashboard-card {
  flex: 1;
  background-color: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: 20rpx;
  margin: 0 10rpx;
  box-shadow: var(--shadow-1);
  text-align: center;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-title {
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.card-value {
  color: var(--text-primary);
}

/* 快捷入口 */
.quick-actions {
  background-color: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: 30rpx;
  margin: 0 20rpx 30rpx;
  box-shadow: var(--shadow-1);
}

.section-title {
  margin-bottom: 20rpx;
}

.quick-action-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.quick-action-item {
  width: 22%;
  text-align: center;
  margin-bottom: 20rpx;
}

.quick-action-icon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 10rpx;
  background-color: rgba(24, 144, 255, 0.1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.quick-action-icon image {
  width: 50rpx;
  height: 50rpx;
}

.quick-action-text {
  color: var(--text-secondary);
}

/* 最近订单 */
.recent-orders {
  background-color: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: 30rpx;
  margin: 0 20rpx 30rpx;
  box-shadow: var(--shadow-1);
}

.section-header {
  margin-bottom: 20rpx;
}

.view-more {
  color: var(--primary-color);
}

.order-item {
  background-color: #ffffff;
  border-radius: var(--border-radius-lg);
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: var(--shadow-1);
  border: 1rpx solid var(--border-color);
}

.order-header {
  margin-bottom: 15rpx;
}

.order-status {
  font-size: 24rpx;
}

.order-info {
  margin: 15rpx 0;
}

.order-customer {
  display: flex;
  flex-direction: column;
}

.order-time {
  margin-top: 10rpx;
}

/* 加载状态 */
.loading-container {
  padding: 30rpx;
}

.loading-text {
  margin-left: 10rpx;
} 