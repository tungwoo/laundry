/* pages/order/detail.wxss */
.container {
  padding: 30rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 状态部分样式 */
.status-section {
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-1);
}

.status-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.status-text {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: 10rpx;
}

.status-text.pending {
  color: var(--warning-color);
}

.status-text.processing {
  color: var(--primary-color);
}

.status-text.ready {
  color: var(--info-color);
}

.status-text.completed {
  color: var(--success-color);
}

.status-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.status-timeline {
  position: relative;
  padding: 20rpx 0;
}

.status-timeline::before {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background-color: var(--border-color);
}

.timeline-item {
  position: relative;
  padding-left: 60rpx;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: 12rpx;
  top: 8rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: var(--border-color);
  z-index: 1;
}

.timeline-item.active .timeline-dot {
  background-color: var(--primary-color);
}

.timeline-title {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.timeline-time {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

/* 通用部分样式 */
.section-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.info-list {
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 20rpx 30rpx;
  box-shadow: var(--shadow-1);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.info-item:last-child {
  border-bottom: none;
}

.info-item .label {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.info-item .value {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.info-item .value.success {
  color: var(--success-color);
}

/* 衣物清单样式 */
.clothes-section {
  margin-bottom: 30rpx;
}

.clothes-list {
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 20rpx 30rpx;
  box-shadow: var(--shadow-1);
}

.clothes-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.clothes-item:last-child {
  border-bottom: none;
}

.clothes-info {
  flex: 1;
  margin-right: 20rpx;
}

.clothes-type {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

.clothes-detail {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.clothes-detail text {
  margin-right: 20rpx;
}

.clothes-requirements {
  margin-bottom: 10rpx;
}

.requirement-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: var(--primary-color-light);
  color: var(--primary-color);
  border-radius: var(--border-radius-sm);
  font-size: var(--font-size-xs);
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.clothes-remark {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.remark-label {
  color: var(--text-hint);
}

.clothes-price {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
}

.price-summary {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 20rpx 30rpx;
  box-shadow: var(--shadow-1);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.summary-item .label {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.summary-item .value {
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.summary-item .value.price {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
}

/* 操作按钮样式 */
.action-section {
  margin-top: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.btn-primary, .btn-default {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: var(--font-size-lg);
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: var(--primary-color);
  color: #fff;
}

.btn-default {
  background-color: #fff;
  color: var(--text-primary);
  border: 1rpx solid var(--border-color);
} 