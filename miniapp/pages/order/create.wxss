/* pages/order/create.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 步骤条样式 */
.steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background-color: #fff;
}

.step-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-number {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.step-item.active .step-number {
  background-color: #1890ff;
}

.step-title {
  font-size: 24rpx;
  color: #999;
}

.step-item.active .step-title {
  color: #1890ff;
  font-weight: bold;
}

.step-line {
  width: 100rpx;
  height: 2rpx;
  background-color: #e0e0e0;
}

.step-line.active {
  background-color: #1890ff;
}

/* 内容样式 */
.step-content {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  margin-bottom: 20rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
}

.member-list {
  max-height: 400rpx;
  overflow-y: auto;
  margin-bottom: 30rpx;
}

.member-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.member-phone {
  font-size: 26rpx;
  color: #666;
}

.member-balance {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.selected-member {
  margin-top: 30rpx;
}

.member-card {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.member-card-info {
  flex: 1;
}

.divider {
  height: 1rpx;
  background-color: #f0f0f0;
  margin: 30rpx 0;
}

.new-customer-section {
  margin-top: 20rpx;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

/* 衣物列表样式 */
.clothes-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.add-clothes-btn {
  display: flex;
  align-items: center;
  color: #1890ff;
  font-size: 28rpx;
}

.add-clothes-btn image {
  width: 36rpx;
  margin-right: 10rpx;
}

.clothes-list {
  margin-bottom: 30rpx;
}

.clothes-item {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.clothes-main {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.clothes-info {
  flex: 1;
}

.clothes-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.clothes-detail {
  font-size: 26rpx;
  color: #666;
}

.clothes-price {
  text-align: right;
}

.price {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.quantity {
  font-size: 26rpx;
  color: #666;
}

.clothes-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #eee;
  padding-top: 15rpx;
}

.clothes-amount {
  font-size: 26rpx;
  color: #333;
}

.action-btns {
  display: flex;
}

.btn-edit, .btn-delete {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 0 20rpx;
  line-height: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}

.btn-edit {
  background-color: #fff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}

.btn-delete {
  background-color: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

.empty-clothes {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.empty-clothes image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.order-summary {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.summary-value.price {
  color: #ff4d4f;
  font-size: 32rpx;
}

.remarks-box {
  margin-top: 30rpx;
}

/* 确认页样式 */
.confirm-section {
  margin-bottom: 30rpx;
}

.confirm-info {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.confirm-item {
  display: flex;
  margin-bottom: 15rpx;
}

.confirm-item:last-child {
  margin-bottom: 0;
}

.confirm-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666;
}

.confirm-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.payment-methods {
  display: flex;
  flex-wrap: wrap;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
}

.payment-method-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 20rpx;
}

.payment-method-name {
  font-size: 28rpx;
  color: #333;
  margin-left: 10rpx;
}

.payment-status {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.confirm-remark {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 底部按钮 */
.footer-btns {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  z-index: 100;
}

.btn-prev, .btn-next, .btn-submit {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.btn-prev {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  margin-right: 30rpx;
}

.btn-next {
  background-color: #1890ff;
  color: #fff;
}

.btn-submit {
  background-color: #52c41a;
  color: #fff;
}

/* 模态框样式 */
.clothes-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 30rpx;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx 40rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.btn-cancel {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
  margin-right: 30rpx;
}

.btn-confirm {
  background-color: #1890ff;
  color: #fff;
}

.picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.quantity-box {
  display: flex;
  align-items: center;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.quantity-input {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border-left: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
}

.checkbox-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.checkbox-item text {
  font-size: 28rpx;
  margin-left: 10rpx;
} 