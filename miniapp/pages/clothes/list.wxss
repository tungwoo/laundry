/* pages/clothes/list.wxss */
.container {
  padding: 30rpx;
  background-color: var(--background-color);
  min-height: 100vh;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 20rpx 30rpx;
  box-shadow: var(--shadow-1);
}

.search-input icon {
  margin-right: 20rpx;
}

.search-input input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  overflow-x: auto;
  margin-bottom: 30rpx;
  padding-bottom: 10rpx;
}

.filter-item {
  flex-shrink: 0;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  box-shadow: var(--shadow-1);
}

.filter-item.active {
  background-color: var(--primary-color);
  color: #fff;
}

/* 衣物列表 */
.clothes-list {
  margin-bottom: 120rpx;
}

.clothes-item {
  background-color: #fff;
  border-radius: var(--border-radius-lg);
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-1);
}

.clothes-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.clothes-type {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
}

.clothes-price {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  color: var(--primary-color);
}

.clothes-detail {
  margin-bottom: 20rpx;
}

.clothes-detail text {
  display: inline-block;
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-right: 20rpx;
}

.clothes-requirements {
  margin-bottom: 20rpx;
}

.requirement-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background-color: var(--primary-color-light);
  color: var(--primary-color);
  border-radius: 20rpx;
  font-size: var(--font-size-sm);
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.clothes-remark {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.remark-label {
  color: var(--text-secondary);
}

.remark-content {
  color: var(--text-primary);
}

.clothes-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid var(--border-color);
}

.btn-edit, .btn-delete {
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: var(--font-size-sm);
  margin-left: 20rpx;
  padding: 0 30rpx;
}

.btn-edit {
  background-color: var(--primary-color-light);
  color: var(--primary-color);
}

.btn-delete {
  background-color: var(--error-color-light);
  color: var(--error-color);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

/* 新建按钮 */
.float-button {
  position: fixed;
  right: 30rpx;
  bottom: calc(30rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-2);
}

.float-button image {
  width: 50rpx;
  height: 50rpx;
} 