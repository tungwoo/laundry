/* pages/clothes/add.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 模式选择器样式 */
.mode-selector {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.mode-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.mode-item.active {
  background-color: #e6f7ff;
}

.mode-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.mode-item text {
  font-size: 28rpx;
  color: #333;
}

/* 智能识别模式样式 */
.smart-mode {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.upload-section {
  margin-bottom: 30rpx;
}

.upload-box {
  height: 400rpx;
  background-color: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-box image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.upload-box text {
  font-size: 28rpx;
  color: #999;
}

.preview-box {
  position: relative;
}

.preview-box image {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
}

.preview-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.btn-reupload, .btn-recognize {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-reupload {
  background-color: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-recognize {
  background-color: #1890ff;
  color: #fff;
}

.recognition-result {
  margin-top: 30rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  margin-bottom: 15rpx;
}

.result-item .label {
  width: 160rpx;
  font-size: 28rpx;
  color: #666;
}

.result-item .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.result-actions {
  display: flex;
  justify-content: space-between;
}

.btn-edit, .btn-confirm {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-edit {
  background-color: #fff;
  color: #1890ff;
  border: 1rpx solid #1890ff;
}

.btn-confirm {
  background-color: #52c41a;
  color: #fff;
}

/* 手动录入模式样式 */
.manual-mode {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-section {
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.form-item .input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-item .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.form-item .textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.checkbox-item text {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.form-actions {
  margin-top: 40rpx;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #1890ff;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
} 