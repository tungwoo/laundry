/* 主题颜色变量 */
:root {
  /* 品牌色 */
  --primary-color: #1890ff;
  --primary-color-light: #40a9ff;
  --primary-color-dark: #096dd9;
  
  /* 辅助色 */
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #f5222d;
  --info-color: #1890ff;
  
  /* 中性色 */
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-hint: #999999;
  --text-disabled: #cccccc;
  
  /* 背景色 */
  --background-color: #f5f5f5;
  --background-color-light: #fafafa;
  --background-color-dark: #e8e8e8;
  
  /* 边框色 */
  --border-color: #e8e8e8;
  --border-color-dark: #d9d9d9;
  
  /* 分割线色 */
  --divider-color: #e8e8e8;
  
  /* 禁用状态色 */
  --disabled-color: #f5f5f5;
  --disabled-text-color: #cccccc;
  
  /* 阴影 */
  --shadow-1: 0 2px 8px rgba(0, 0, 0, 0.15);
  --shadow-2: 0 4px 12px rgba(0, 0, 0, 0.15);
  
  /* 圆角 */
  --border-radius-sm: 2rpx;
  --border-radius-md: 4rpx;
  --border-radius-lg: 8rpx;
  
  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 12rpx;
  --spacing-md: 16rpx;
  --spacing-lg: 24rpx;
  --spacing-xl: 32rpx;
  
  /* 字体大小 */
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 40rpx;
  
  /* 字体粗细 */
  --font-weight-regular: 400;
  --font-weight-medium: 500;
  --font-weight-bold: 600;
  
  /* 行高 */
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-loose: 1.8;
  
  /* 动画 */
  --animation-duration: 0.2s;
  --animation-timing-function: ease-in-out;
}

/* 全局通用样式 */
.page-container {
  min-height: 100vh;
  background-color: var(--background-color);
  box-sizing: border-box;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}

/* 间距类 */
.margin-xs {
  margin: var(--spacing-xs);
}

.margin-sm {
  margin: var(--spacing-sm);
}

.margin-md {
  margin: var(--spacing-md);
}

.margin-lg {
  margin: var(--spacing-lg);
}

.margin-xl {
  margin: var(--spacing-xl);
}

/* 内边距类 */
.padding-xs {
  padding: var(--spacing-xs);
}

.padding-sm {
  padding: var(--spacing-sm);
}

.padding-md {
  padding: var(--spacing-md);
}

.padding-lg {
  padding: var(--spacing-lg);
}

.padding-xl {
  padding: var(--spacing-xl);
}

/* 文本颜色类 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-hint {
  color: var(--text-hint);
}

.text-disabled {
  color: var(--text-disabled);
}

.text-brand {
  color: var(--primary-color);
}

.text-success {
  color: var(--success-color);
}

.text-warning {
  color: var(--warning-color);
}

.text-error {
  color: var(--error-color);
}

/* 文本大小类 */
.text-xs {
  font-size: var(--font-size-xs);
}

.text-sm {
  font-size: var(--font-size-sm);
}

.text-md {
  font-size: var(--font-size-md);
}

.text-lg {
  font-size: var(--font-size-lg);
}

.text-xl {
  font-size: var(--font-size-xl);
}

.text-xxl {
  font-size: var(--font-size-xxl);
}

/* 文本对齐类 */
.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 文本粗细类 */
.text-regular {
  font-weight: var(--font-weight-regular);
}

.text-medium {
  font-weight: var(--font-weight-medium);
}

.text-bold {
  font-weight: var(--font-weight-bold);
}

/* 边框类 */
.border {
  border: 1rpx solid var(--border-color);
}

.border-top {
  border-top: 1rpx solid var(--border-color);
}

.border-right {
  border-right: 1rpx solid var(--border-color);
}

.border-bottom {
  border-bottom: 1rpx solid var(--border-color);
}

.border-left {
  border-left: 1rpx solid var(--border-color);
}

/* 圆角类 */
.radius-sm {
  border-radius: var(--border-radius-sm);
}

.radius-md {
  border-radius: var(--border-radius-md);
}

.radius-lg {
  border-radius: var(--border-radius-lg);
}

/* 阴影类 */
.shadow-1 {
  box-shadow: var(--shadow-1);
}

.shadow-2 {
  box-shadow: var(--shadow-2);
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-1);
  margin: var(--spacing-md);
  padding: var(--spacing-lg);
}

/* 按钮样式 */
.btn-primary {
  background-color: var(--primary-color);
  color: #ffffff;
  border: none;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  text-align: center;
}

.btn-outline {
  background-color: transparent;
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  text-align: center;
}

.btn-text {
  background-color: transparent;
  color: var(--primary-color);
  border: none;
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  text-align: center;
}

.btn-disabled {
  background-color: var(--disabled-color);
  color: var(--disabled-text-color);
  border: none;
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  text-align: center;
}

/* 表单相关样式 */
.form-item {
  margin-bottom: var(--spacing-lg);
}

.form-label {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-xs);
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid var(--border-color);
  border-radius: var(--border-radius-md);
  padding: 0 var(--spacing-md);
  font-size: var(--font-size-md);
  color: var(--text-primary);
  background-color: #ffffff;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  border: 1rpx solid var(--border-color);
  border-radius: var(--border-radius-md);
  padding: var(--spacing-md);
  font-size: var(--font-size-md);
  color: var(--text-primary);
  background-color: #ffffff;
  line-height: var(--line-height-normal);
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 var(--spacing-sm);
  height: 40rpx;
  font-size: var(--font-size-sm);
  border-radius: var(--border-radius-sm);
}

.tag-primary {
  background-color: rgba(24, 144, 255, 0.1);
  color: var(--primary-color);
  border: 1rpx solid var(--primary-color);
}

.tag-success {
  background-color: rgba(82, 196, 26, 0.1);
  color: var(--success-color);
  border: 1rpx solid var(--success-color);
}

.tag-warning {
  background-color: rgba(250, 173, 20, 0.1);
  color: var(--warning-color);
  border: 1rpx solid var(--warning-color);
}

.tag-error {
  background-color: rgba(245, 34, 45, 0.1);
  color: var(--error-color);
  border: 1rpx solid var(--error-color);
}

/* 列表样式 */
.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: var(--spacing-lg);
  background-color: #ffffff;
  border-bottom: 1rpx solid var(--border-color);
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.list-item-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.list-item-extra {
  margin-left: var(--spacing-md);
}

/* 分割线样式 */
.divider {
  width: 100%;
  height: 1rpx;
  background-color: var(--divider-color);
  margin: var(--spacing-md) 0;
}

.divider-vertical {
  width: 1rpx;
  height: 100%;
  background-color: var(--divider-color);
  margin: 0 var(--spacing-md);
}

/* 徽标样式 */
.badge {
  position: relative;
}

.badge-dot {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: var(--error-color);
}

.badge-count {
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 16rpx;
  background-color: var(--error-color);
  color: #ffffff;
  font-size: var(--font-size-xs);
  text-align: center;
  padding: 0 var(--spacing-xs);
}

/* 加载动画样式 */
.loading {
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid var(--primary-color);
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
}

.empty-state-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: var(--spacing-lg);
}

.empty-state-text {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  text-align: center;
}

/* 页面底部安全区域适配 */
.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* 页面底部固定按钮 */
.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--spacing-md);
  background-color: #ffffff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
  padding-bottom: calc(var(--spacing-md) + env(safe-area-inset-bottom));
} 